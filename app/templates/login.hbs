 
   

    <!-- Top Banner
    ================================================= -->
		<section id="banner" style="background-image: url('assets/images/bg.jpg')">
			<div class="container">

        <!-- Sign Up Form
        ================================================= -->
        <div class="sign-up-form">
					<a href="index.html" class="logo"><img src="assets/images/logo.png" alt="Friend Finder"/></a>
					
					<h2 class="text-white" id="errorMsg">Find My Friends</h2>
					<div class="googleSign" {{action 'login' 'google'}}>
					<img class="firebaseui-idp-icon" src="assets/images/google-sign-in.png" width="60%" >
					</div>

					<div class="line-divider"></div>
					{{#if isSignup }}
					<div class="form-wrapper">
						<p class="signup-text">Signup now and meet awesome people around the world</p>
						<form action="#">
							<fieldset class="form-group">
								<input type="text" class="form-control" id="example-name" placeholder="Enter name">
							</fieldset>
							<fieldset class="form-group">
								<input type="email" class="form-control" id="example-email" placeholder="Enter email">
							</fieldset>
							<fieldset class="form-group">
								<input type="password" class="form-control" id="example-password" placeholder="Enter a password">
							</fieldset>
						</form>
						<p>By signning up you agree to the terms</p>
						<button class="btn-secondary" {{action 'signup'}}>Signup</button>
					</div>
					<a {{action 'signUpVeiw'}}>Already have an account?</a>
					{{else}}
						<div class="form-wrapper">
						<p class="signup-text">Login now and meet awesome people around the world</p>
						<form action="#">
						
							<fieldset class="form-group">
								<input type="email" class="form-control" id="login-email" placeholder="Enter email">
							</fieldset>
							<fieldset class="form-group">
								<input type="password" class="form-control" id="login-password" placeholder="Enter a password">
							</fieldset>
						</form>
						<p {{action 'signUpVeiw'}}>I am new User</p>
						<button class="btn-secondary" {{action 'login' 'password'}}>Login</button>

						</div>
					{{/if}}
					<img class="form-shadow" src="assets/images/bottom-shadow.png" alt="" />
				</div><!-- Sign Up Form End -->

        <svg class="arrows hidden-xs hidden-sm">
          <path class="a1" d="M0 0 L30 32 L60 0"></path>
          <path class="a2" d="M0 20 L30 52 L60 20"></path>
          <path class="a3" d="M0 40 L30 72 L60 40"></path>
        </svg>
			</div>
		</section>

    <!-- Features Section
    ================================================= -->
		<section id="features">
			<div class="container wrapper">
				<h1 class="section-title slideDown">social herd</h1>
				<div class="row slideUp">
					<div class="feature-item col-md-2 col-sm-6 col-xs-6 col-md-offset-2">
						<div class="feature-icon"><i class="icon ion-person-add"></i></div>
						<h3>Make Friends</h3>
					</div>
					<div class="feature-item col-md-2 col-sm-6 col-xs-6">
						<div class="feature-icon"><i class="icon ion-images"></i></div>
						<h3>Publish Posts</h3>
					</div>
					<div class="feature-item col-md-2 col-sm-6 col-xs-6">
						<div class="feature-icon"><i class="icon ion-chatbox-working"></i></div>
						<h3>Private Chats</h3>
					</div>
					<div class="feature-item col-md-2 col-sm-6 col-xs-6">
						<div class="feature-icon"><i class="icon ion-compose"></i></div>
						<h3>Create Polls</h3>
					</div>
				</div>
				<h2 class="sub-title">find awesome people like you</h2>
				<div id="incremental-counter" data-value="101242"></div>
				<p>People Already Signed Up</p>
				<img src="assets/images/face-map.png" alt="" class="img-responsive face-map slideUp hidden-sm hidden-xs" />
			</div>

		</section>

    <!-- Download Section
    ================================================= -->
		<section id="app-download">
			<div class="container wrapper">
				<h1 class="section-title slideDown">download</h1>
				<ul class="app-btn list-inline slideUp">
					<li><button class="btn-secondary"><img src="assets/images/app-store.png" alt="App Store" /></button></li>
					<li><button class="btn-secondary"><img src="assets/images/google-play.png" alt="Google Play" /></button></li>
				</ul>
				<h2 class="sub-title">stay connected anytime, anywhere</h2>
				<img src="assets/images/log3.png" alt="iPhone" class="img-responsive" />
			</div>
		</section>

