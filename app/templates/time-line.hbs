 <div class="container">

      <!-- Timeline
      ================================================= -->
      <div class="timeline">
        <div class="timeline-cover" style="background-image: url('{{if model.user.coverUrl model.user.coverUrl "assets/images/defaultcover.png"}}')">

          <!--Timeline Menu for Large Screens-->
          <div class="timeline-nav-bar hidden-sm hidden-xs">
            <div class="row">
              <div class="col-md-3">
                <div class="profile-info">
                 <p class='text-white' style="position: relative;top: 195px;" {{action 'openPCropper'}}>Change Photo</p>
                  <img src="{{model.user.photoURL}}" alt="" class="img-responsive profile-photo" onerror="this.src='assets/images/defaultUser.png'"/>

                  <h3>{{model.user.name}}</h3>
                  <p class="text-muted"></p>
                </div>
              </div>
              <div class="col-md-9">
                <ul class="list-inline profile-menu">
                <li>{{#link-to 'time-line'}}Timeline{{/link-to}}</li>
                  <li>{{#link-to 'about'}}About{{/link-to}}</li>
                  <li>{{#link-to 'friends'}}Friends{{/link-to}}</li>
                </ul>
                <ul class="follow-me list-inline">
                  <li>{{followers}} peoples following </li>
                  <!--<li><button class="btn-primary">Add Friend</button></li>
                  -->
                </ul>
              </div>
            </div>
            <a class='text-white coverUpade' {{action "openCropper"}}>Change Cover</a>
          </div><!--Timeline Menu for Large Screens End-->

          <!--Timeline Menu for Small Screens-->
          <div class="navbar-mobile hidden-lg hidden-md">
            <div class="profile-info">
              <img src="{{model.user.photoURL}}" alt="" class="img-responsive profile-photo" />
              <h4>{{model.user.name}}</h4>
              <p class="text-muted"></p>
            </div>
            <div class="mobile-menu">
              <ul class="list-inline">
                <li>{{#link-to 'time-line'}}Timeline{{/link-to}}</li>
                  <li>{{#link-to 'about'}}About{{/link-to}}</li>
                  <li>{{#link-to 'friends'}}Friends{{/link-to}}</li>
              </ul>
             
            </div>
          </div><!--Timeline Menu for Small Screens End-->

        </div>
        <div id="page-contents">
          <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-7">


             <!-- Post Create Box
            ================================================= -->
            {{post-and-share new=model.sendPost post=model.post user=model.user succeses=(action 'reloader')}}
            <!-- Post Create Box End-->
             
              <!-- Post Content
            ================================================= -->
           {{#each model.post as |po|}}
                {{time-line-post data=po user=model.user}}
             {{/each}}
           <!-- End Post Content -->

           </div>
          </div>
        </div>
      </div>
    </div>
{{#if showModel}}
            {{image-cropper viewPort='post' closeModl=(action 'closeModel') succeses=(action 'croppedCoverImage')}}
            {{/if}}

{{#if profileModel}}
               {{image-cropper viewPort='profile' closeModl=(action 'closeModel') succeses=(action 'croppedProfileImage')}}
              {{/if}}